    <div class="main-content">
      <div class="header">
        <h1>Main Dashboard</h1>
      </div>
      <div class="content">
        <form id="notification">
          <label for="notify">notify</label>
          <select id="notify" name="notifyto"></select>

          <label for="lname">Subject</label>
          <input
            type="text"
            id="Subject"
            name="Subject"
            placeholder="subject.."
          />
          <label for="lname">Content</label>
          <input
            type="text"
            id="Content"
            name="Content"
            placeholder="content.."
          />
          <input type="submit" value="Send notification" />
        </form>
      </div>
      <div class="table">
        <table id="notification">
          <tr>
            <th>notification_id</th>
            <th>notification for</th>
            <th>notifictation_created_at</th>
            <th>notification_subject</th>
            <th>notifictation_content</th>
            <th>notifictation_is_readed</th>
            <th>notifictation_is_deleted</th>
            <th>notifictation_updated</th>
          </tr>
          <tbody id="tbody"></tbody>
        </table>
      </div>

      <footer class="ecommerce-footer">
        <div class="footer-container">
          <div class="footer-section">
            <h3>Shop</h3>
            <ul>
              <li><a href="#">Categories</a></li>
